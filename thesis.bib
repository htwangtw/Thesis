}

@Article{Davey2016,
  Title                    = {{Exploring the role of the posterior middle temporal gyrus in semantic cognition: Integration of anterior temporal lobe with executive processes}},
  Author                   = {Davey, James and Thompson, Hannah E. and Hallam, Glyn and Karapanagiotidis, Theodoros and Murphy, Charlotte and {De Caso}, Irene and Krieger-Redwood, Katya and Bernhardt, Boris C. and Smallwood, Jonathan and Jefferies, Elizabeth},
