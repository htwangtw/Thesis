@Article{Stawarczyk2011a,
  Title                    = {{Neural correlates of ongoing conscious experience: Both task-unrelatedness and stimulus-independence are related to default network activity}},
  Author                   = {Stawarczyk, David and Majerus, Steve and Maquet, Pierre and D'Argembeau, Arnaud},
  Journal                  = {PLoS ONE},
  Year                     = {2011},

  Month                    = {feb},
  Number                   = {2},
  Pages                    = {e16997},
